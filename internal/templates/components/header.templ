package components

import "github.com/sakithb/hcblk-server/internal/models"
import "github.com/sakithb/hcblk-server/internal/utils"

templ Header() {
	<header id="header" class="flex items-center md:justify-normal justify-center sticky top-0 left-0 px-4 py-3 shadow bg-white z-[999]" x-data="{open: false}">
		@Logo()
		if _, ok := ctx.Value("search").(bool); ok {
			<form
				class="hidden md:inline-flex mx-auto items-center w-[40vw] p-2 rounded border has-[:focus]:border-indigo-700 transition-colors"
				hx-get="/"
				hx-trigger="submit"
				hx-target="#results"
				hx-swap="outerHTML"
			>
				<input class="grow outline-none" type="text" name="q" placeholder="Search listings" autocomplete="off" x-init="$el.value = new URLSearchParams(window.location.search).get('q') ?? ''" @keyup.enter="$el.parentElement.submit()"/>
				<button @click="$el.parentElement.submit()">
					<svg class="cursor-pointer fill-neutral-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M10.25 2a8.25 8.25 0 0 1 6.34 13.53l5.69 5.69a.749.749 0 0 1-.326 1.275.749.749 0 0 1-.734-.215l-5.69-5.69A8.25 8.25 0 1 1 10.25 2ZM3.5 10.25a6.75 6.75 0 1 0 13.5 0 6.75 6.75 0 0 0-13.5 0Z"></path></svg>
				</button>
			</form>
		} else {
			<form method="GET" action="/" class="hidden md:inline-flex mx-auto items-center w-[40vw] p-2 rounded border has-[:focus]:border-indigo-700 transition-colors">
				<input class="grow outline-none" type="text" name="q" placeholder="Search listings" autocomplete="off" @keyup.enter="$el.parentElement.submit()"/>
				<button @click="$el.parentElement.submit()">
					<svg class="cursor-pointer fill-neutral-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M10.25 2a8.25 8.25 0 0 1 6.34 13.53l5.69 5.69a.749.749 0 0 1-.326 1.275.749.749 0 0 1-.734-.215l-5.69-5.69A8.25 8.25 0 1 1 10.25 2ZM3.5 10.25a6.75 6.75 0 1 0 13.5 0 6.75 6.75 0 0 0-13.5 0Z"></path></svg>
				</button>
			</form>
		}
		if u, ok := ctx.Value("user").(models.User); ok {
			<div class="hidden md:inline-flex items-center gap-3 shrink grow-0">
				<div class="overflow-visible relative" x-data="{ open: false }">
					<img class="cursor-pointer w-10 rounded-full" x-on:click="open = ! open" src={ "/assets/users/" + u.Id } alt={ u.FirstName }/>
					<div class="absolute top-full right-0 mt-2 bg-white shadow flex flex-col" x-show="open" @click.outside="open = false" x-transition x-cloak>
						<a class="cursor-pointer px-4 py-2 hover:bg-neutral-200 inline-flex items-center gap-3" href="/me/listings">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16"><path d="M5.75 2.5h8.5a.75.75 0 0 1 0 1.5h-8.5a.75.75 0 0 1 0-1.5Zm0 5h8.5a.75.75 0 0 1 0 1.5h-8.5a.75.75 0 0 1 0-1.5Zm0 5h8.5a.75.75 0 0 1 0 1.5h-8.5a.75.75 0 0 1 0-1.5ZM2 14a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm1-6a1 1 0 1 1-2 0 1 1 0 0 1 2 0ZM2 4a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"></path></svg>
							<span>Listings</span>
						</a>
						<a class="cursor-pointer px-4 py-2 hover:bg-neutral-200 inline-flex items-center gap-3" href="/me/settings">
